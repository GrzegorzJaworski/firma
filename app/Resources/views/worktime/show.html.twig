{% extends 'base.html.twig' %}

{% block body %}
    <h1>Worktime</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workTime.id }}</td>
            </tr>
            <tr>
                <th>Petsitter</th>
                <td>{{ workTime.petsitter }}</td>
            </tr>
            <tr>
                <th>Animal</th>
                <td>{{ workTime.animal }}</td>
            </tr>
            <tr>
                <th>Visitstart</th>
                <td>{% if workTime.visitStart %}{{ workTime.visitStart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Visitend</th>
                <td>{% if workTime.visitEnd %}{{ workTime.visitEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('worktime_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('worktime_edit', { 'id': workTime.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

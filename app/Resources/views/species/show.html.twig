{% extends 'base.html.twig' %}

{% block body %}
    <h1>Species</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ species.id }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ species.species }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('species_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('species_edit', { 'id': species.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

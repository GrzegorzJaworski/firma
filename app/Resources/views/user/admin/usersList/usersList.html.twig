{% block test %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Lista użytkowników
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Imię i Nazwisko</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Zwierzę</th>
                            <th>Typ</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr class=" {% if user.id is divisible by(2) %} odd {% else %} even {% endif %} gradeA">
                                <td>{{ user.id }}</td>
                                <td><a href={{ path('fos_user_profile_show') }}>{{ user.username }}</a></td>
                                <td>{{ user.email }}</td>
                                <td>dodac telefon</td>
                                <td>
                                    <ul>
                                        {% for animal in user.animals %}
                                        <li>
                                            animal
                                        </li>
                                        {% endfor %}
                                    </ul>
                                    {#{{ user.animals }}#}
                                </td>
                                <td>{{ user.roles[0] }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>






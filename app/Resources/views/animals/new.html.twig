{% extends 'user/admin/index.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block test %}
    <h1>Dodaj zwierzaka</h1>

    {{ form_start(form, {'attr': {'class': 'col-lg-6'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.breed) }}
    {#{{ dump(app.session) }}#}
        {% if owner != null %}
            {{ form_widget(form.owner, {'attr': {'class': 'hide'}}) }}
            {% else %}
                {{ form_row(form.owner) }}
        {% endif %}
        {{ form_row(form.description) }}
        <input class="btn btn-primary" type="submit" value="Dodaj" />
    {{ form_end(form) }}

{% endblock %}
